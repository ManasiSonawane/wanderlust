<% layout("/layouts/boilerplate") %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <h1 class="col-12 text-center mb-4">Login to SmartTrade</h1>
            <div class="col-md-6 col-lg-4">
                <form action="/login" method="POST" class="needs-validation" novalidate>
                    <!-- Username -->
                    <div class="mb-4">
                        <label for="username" class="form-label"><b>Username</b></label>
                        <input name="username" id="username" type="text" class="form-control"
                            placeholder="Enter your username" required />
                        <div class="invalid-feedback">Please provide a username.</div>
                        <div class="valid-feedback">Looks good!</div>
                    </div>

                    <!-- Password -->
                    <div class="mb-4">
                        <label for="password" class="form-label"><b>Password</b></label>
                        <input name="password" id="password" type="password" class="form-control"
                            placeholder="Enter your password" required />
                        <div class="invalid-feedback">Please provide a password.</div>
                        <div class="valid-feedback">Password looks good!</div>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success w-100 py-2">Login</button>

                    <!-- Footer/Links -->
                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a href="/signup" class="text-decoration-none">Sign up here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>